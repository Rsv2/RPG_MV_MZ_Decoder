<Window x:Class="RPG_MV_MZ_Decoder.LogWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_MV_MZ_Decoder"
        mc:Ignorable="d" HorizontalContentAlignment="Left" WindowStartupLocation="CenterScreen"
        Title="LogWin" Height="26" Width="252" ResizeMode="NoResize" WindowStyle="None">
    <Grid DataContext="{Binding SourceModel}">
        <TextBlock HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="{Binding Text}"
                   VerticalAlignment="Stretch"
                   FontSize="18" 
                   FontFamily="Segoe UI"
                   Height="24"
                   Width="250"/>
    </Grid>
</Window>
